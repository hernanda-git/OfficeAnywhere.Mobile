<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="OfficeAnywhere.Mobile.Views.TaskPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:OfficeAnywhere.Mobile.Converters"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:local="clr-namespace:OfficeAnywhere.Mobile.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.NavBarIsVisible="False"
    mc:Ignorable="d">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource White}" StatusBarStyle="Default" />
    </ContentPage.Behaviors>
    <ContentPage.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:ImageUrlConverter x:Key="ImageUrlConverter" />
        <ResourceDictionary>
            <DataTemplate x:Key="SkeletonView">
                <local:SkeletonView />
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid ColumnDefinitions="*" RowDefinitions="*">
            <ScrollView Grid.Row="0" Grid.Column="0">
                <VerticalStackLayout
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="15,0,15,15">
                    <Grid
                        Margin="0,0,0,20"
                        ColumnDefinitions="1.5*,7*,1.5*"
                        VerticalOptions="Start">
                        <ffimageloading:CachedImageView
                            Grid.Column="0"
                            Source="{Binding ProfilePicture}"
                            Stroke="{StaticResource PrimaryDark}"
                            StrokeThickness="5" />
                        <Image
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Source="logo_bg_white.png"
                            VerticalOptions="Center"
                            WidthRequest="132" />
                        <ImageButton
                            Grid.Column="2"
                            Padding="10"
                            BackgroundColor="{StaticResource PrimaryDark}"
                            CornerRadius="8"
                            HorizontalOptions="End"
                            VerticalOptions="Center">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="FASolid"
                                    Glyph=""
                                    Size="22"
                                    Color="{StaticResource White}" />
                            </ImageButton.Source>
                            <ImageButton.Behaviors>
                                <toolkit:TouchBehavior PressedScale="1.12" />
                            </ImageButton.Behaviors>
                        </ImageButton>
                    </Grid>
                    <Label
                        Margin="0,0,0,20"
                        FontAttributes="Bold"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="المهام"
                        TextColor="{StaticResource PrimaryDarkText}" />
                    <Grid
                        Margin="0,0,0,20"
                        ColumnDefinitions="3*,7*"
                        ColumnSpacing="10">
                        <Button
                            Grid.Row="0"
                            Grid.Column="0"
                            BackgroundColor="{StaticResource PrimaryDark}"
                            CornerRadius="10"
                            HeightRequest="43.5"
                            Text="Search">
                            <Button.ImageSource>
                                <FontImageSource
                                    FontFamily="FASolid"
                                    Glyph=""
                                    Size="22"
                                    Color="{StaticResource White}" />
                            </Button.ImageSource>
                        </Button>

                        <Frame
                            Grid.Column="1"
                            Padding="2"
                            BackgroundColor="{StaticResource SegmentedBackground}"
                            BorderColor="Transparent"
                            CornerRadius="15">
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="0">
                                <Button
                                    Grid.Column="0"
                                    Margin="0"
                                    BackgroundColor="Transparent"
                                    CornerRadius="15"
                                    FontAttributes="Bold"
                                    Text="تاريخ البدء"
                                    TextColor="{StaticResource White}" />
                                <Button
                                    Grid.Column="1"
                                    Margin="0"
                                    BackgroundColor="{StaticResource PrimaryDark}"
                                    CornerRadius="15"
                                    FontAttributes="Bold"
                                    Text="تاريخ الانتهاء"
                                    TextColor="{StaticResource White}" />
                            </Grid>
                        </Frame>
                    </Grid>

                    <local:SkeletonView IsVisible="{Binding IsBusy}" />
                    <local:SkeletonView IsVisible="{Binding IsBusy}" />
                    <local:SkeletonView IsVisible="{Binding IsBusy}" />
                    <local:SkeletonView IsVisible="{Binding IsBusy}" />
                    <local:SkeletonView IsVisible="{Binding IsBusy}" />

                    <CollectionView
                        Margin="0"
                        ItemsSource="{Binding TaskCardList}"
                        SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                        SelectionChangedCommand="{Binding TaskSelectedCommand}"
                        SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,10"
                                    Padding="15"
                                    BackgroundColor="{StaticResource TaskBackground}"
                                    StrokeShape="RoundRectangle 10,10,10,10">
                                    <Grid RowDefinitions="*,*,*">
                                        <Grid Grid.Row="0" ColumnDefinitions="*,*">
                                            <Label
                                                Grid.Column="0"
                                                FontSize="16"
                                                Text="{Binding LastUpdatedDate, StringFormat='{0:MMMM dd}'}"
                                                TextColor="{StaticResource PrimaryDark}"
                                                VerticalOptions="Center" />
                                            <Label
                                                Grid.Column="1"
                                                FontAttributes="Bold"
                                                FontSize="22"
                                                HorizontalTextAlignment="End"
                                                Text="{Binding Title}"
                                                TextColor="{StaticResource PrimaryDark}"
                                                VerticalOptions="Center" />
                                        </Grid>
                                        <Grid Grid.Row="1" ColumnDefinitions="*,*">
                                            <Label
                                                Grid.Column="0"
                                                FontSize="16"
                                                Text="{Binding LastUpdatedDate, StringFormat='{0:HH:mm}'}"
                                                TextColor="{StaticResource PrimaryDark}"
                                                VerticalOptions="Center" />
                                            <Label
                                                Grid.Column="1"
                                                FontSize="22"
                                                HorizontalTextAlignment="End"
                                                Text="{Binding TaskTypeName}"
                                                TextColor="{StaticResource PrimaryDark}"
                                                VerticalOptions="Center" />
                                        </Grid>
                                        <Grid
                                            Grid.Row="2"
                                            Margin="0,20,0,0"
                                            ColumnDefinitions="*,*">
                                            <HorizontalStackLayout Grid.Column="0" HorizontalOptions="Start">
                                                <Frame
                                                    Margin="0,0,-15,0"
                                                    Padding="5"
                                                    BackgroundColor="{StaticResource PrimaryDark}"
                                                    BorderColor="{StaticResource PrimaryDark}"
                                                    CornerRadius="100"
                                                    HasShadow="False"
                                                    HeightRequest="45"
                                                    HorizontalOptions="Start"
                                                    VerticalOptions="Start"
                                                    WidthRequest="45">
                                                    <ffimageloading:CachedImage
                                                        Aspect="AspectFill"
                                                        HeightRequest="40"
                                                        Source="{Binding SenderUserImage, Converter={StaticResource ImageUrlConverter}}"
                                                        WidthRequest="40">
                                                        <ffimageloading:CachedImage.Clip>
                                                            <EllipseGeometry
                                                                Center="20,20"
                                                                RadiusX="20"
                                                                RadiusY="20" />
                                                        </ffimageloading:CachedImage.Clip>
                                                    </ffimageloading:CachedImage>
                                                </Frame>
                                                <Frame
                                                    Margin="0,0,-15,0"
                                                    Padding="5"
                                                    BackgroundColor="{StaticResource PrimaryDark}"
                                                    BorderColor="{StaticResource PrimaryDark}"
                                                    CornerRadius="100"
                                                    HasShadow="False"
                                                    HeightRequest="45"
                                                    HorizontalOptions="Start"
                                                    IsVisible="{Binding NotSameImage}"
                                                    VerticalOptions="Start"
                                                    WidthRequest="45">
                                                    <ffimageloading:CachedImage
                                                        Aspect="AspectFill"
                                                        HeightRequest="40"
                                                        Source="{Binding EmployUserImage, Converter={StaticResource ImageUrlConverter}}"
                                                        WidthRequest="40">
                                                        <ffimageloading:CachedImage.Clip>
                                                            <EllipseGeometry
                                                                Center="20,20"
                                                                RadiusX="20"
                                                                RadiusY="20" />
                                                        </ffimageloading:CachedImage.Clip>
                                                    </ffimageloading:CachedImage>
                                                </Frame>
                                            </HorizontalStackLayout>
                                            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                                                <Frame
                                                    Margin="0,0,10,0"
                                                    Padding="7"
                                                    BackgroundColor="White"
                                                    BorderColor="Transparent"
                                                    CornerRadius="10"
                                                    HasShadow="False"
                                                    VerticalOptions="Center">
                                                    <Label
                                                        FontFamily="FARegular"
                                                        FontSize="22"
                                                        Text=""
                                                        TextColor="{StaticResource PrimaryDark}" />
                                                </Frame>
                                                <Label
                                                    FontSize="16"
                                                    Text="{Binding MessageCount}"
                                                    TextColor="{StaticResource PrimaryDarkText}"
                                                    VerticalOptions="Center" />
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
            <ImageButton
                Grid.Row="0"
                Grid.Column="0"
                Margin="20"
                Padding="10"
                BackgroundColor="{StaticResource PrimaryDark}"
                Command="{Binding AddTaskCommand}"
                CornerRadius="15"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="50">
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="FASolid"
                        Glyph="+"
                        Color="{StaticResource White}" />
                </ImageButton.Source>
                <ImageButton.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.05" />
                </ImageButton.Behaviors>
            </ImageButton>
        </Grid>
    </ContentPage.Content>
</ContentPage>