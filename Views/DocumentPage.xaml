<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="OfficeAnywhere.Mobile.Views.DocumentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:local="clr-namespace:OfficeAnywhere.Mobile.Views"
    Shell.NavBarIsVisible="False"
    mc:Ignorable="d">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource White}" StatusBarStyle="Default" />
    </ContentPage.Behaviors>
    <ContentPage.Content>
        <VerticalStackLayout Padding="15,0,15,15">
            <Grid ColumnDefinitions="1.5*,7*,1.5*" VerticalOptions="Start" Margin="0,0,0,20">
                <ImageButton Grid.Column="0" Source="sample_profile_pic.jpg" HeightRequest="46" WidthRequest="46" Aspect="Fill" VerticalOptions="Center" HorizontalOptions="Start" Padding="5" BorderColor="{StaticResource PrimaryDark}" BorderWidth="5">
                    <ImageButton.Behaviors>
                        <toolkit:TouchBehavior PressedScale="1.12"/>
                    </ImageButton.Behaviors>
                </ImageButton>
                <Image Grid.Column="1" Margin="10,0,0,0" VerticalOptions="Center" Source="logo_bg_white.png" WidthRequest="132"/>
                <ImageButton Grid.Column="2" CornerRadius="8" BackgroundColor="{StaticResource PrimaryDark}" Padding="10" VerticalOptions="Center" HorizontalOptions="End">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="FASolid" Glyph="&#xf0c9;" Color="{StaticResource White}" Size="22"/>
                    </ImageButton.Source>
                    <ImageButton.Behaviors>
                        <toolkit:TouchBehavior PressedScale="1.12"/>
                    </ImageButton.Behaviors>
                </ImageButton>
            </Grid>
            <Label Text="المستندات" FontSize="Large" TextColor="{StaticResource PrimaryDarkText}" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20"/>

            <Grid ColumnDefinitions="3*,7*" ColumnSpacing="10" Margin="0,0,0,20">
                <Button Text="Search" CornerRadius="10" Grid.Row="0" Grid.Column="0" HeightRequest="43.5" BackgroundColor="{StaticResource PrimaryDark}">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FASolid" Glyph="&#xf002;" Color="{StaticResource White}" Size="22"/>
                    </Button.ImageSource>
                </Button>
            </Grid>

            <Frame BackgroundColor="Transparent" BorderColor="{StaticResource PrimaryDark}" CornerRadius="5" Padding="10" Margin="0,0,0,15" HeightRequest="50" VerticalOptions="Start" HasShadow="False">
                <Label Text="حكومي" TextColor="{StaticResource PrimaryDarkText}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.02"/>
                </Frame.Behaviors>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="{StaticResource PrimaryDark}" CornerRadius="5" Padding="10" Margin="0,0,0,15" HeightRequest="50" VerticalOptions="Start" HasShadow="False">
                <Label Text="موارد بشرية" TextColor="{StaticResource PrimaryDarkText}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.02"/>
                </Frame.Behaviors>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="{StaticResource PrimaryDark}" CornerRadius="5" Padding="10" Margin="0,0,0,15" HeightRequest="50" VerticalOptions="Start" HasShadow="False">
                <Label Text="عقود" TextColor="{StaticResource PrimaryDarkText}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.02"/>
                </Frame.Behaviors>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="{StaticResource PrimaryDark}" CornerRadius="5" Padding="10" Margin="0,0,0,15" HeightRequest="50" VerticalOptions="Start" HasShadow="False">
                <Label Text="مالية" TextColor="{StaticResource PrimaryDarkText}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.02"/>
                </Frame.Behaviors>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="{StaticResource PrimaryDark}" CornerRadius="5" Padding="10" Margin="0,0,0,15" HeightRequest="50" VerticalOptions="Start" HasShadow="False">
                <Label Text="جوده" TextColor="{StaticResource PrimaryDarkText}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.02"/>
                </Frame.Behaviors>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="{StaticResource PrimaryDark}" CornerRadius="5" Padding="10" Margin="0,0,0,15" HeightRequest="50" VerticalOptions="Start" HasShadow="False">
                <Label Text="مباني" TextColor="{StaticResource PrimaryDarkText}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.02"/>
                </Frame.Behaviors>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="{StaticResource PrimaryDark}" CornerRadius="5" Padding="10" Margin="0,0,0,15" HeightRequest="50" VerticalOptions="Start" HasShadow="False">
                <Label Text="تصميم" TextColor="{StaticResource PrimaryDarkText}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.02"/>
                </Frame.Behaviors>
            </Frame>

            <Frame BackgroundColor="Transparent" BorderColor="{StaticResource PrimaryDark}" CornerRadius="5" Padding="10" Margin="0,0,0,15" HeightRequest="50" VerticalOptions="Start" HasShadow="False">
                <Label Text="المحتوى" TextColor="{StaticResource PrimaryDarkText}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.Behaviors>
                    <toolkit:TouchBehavior PressedScale="1.02"/>
                </Frame.Behaviors>
            </Frame>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
